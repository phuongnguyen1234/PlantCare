<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="com.example.plantcare.data.enums.Status"/>
        <import type="android.view.View"/>
        <variable
            name="task"
            type="com.example.plantcare.data.entity.Task" />
    </data>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:layout_marginVertical="4dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:strokeWidth="0dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="120dp"
            android:padding="16dp">

            <ImageView
                android:id="@+id/task_icon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:taskIcon="@{task.type}"
                tools:src="@drawable/water_drop" />

            <ImageView
                android:id="@+id/repeat_icon"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@android:drawable/ic_popup_sync"
                app:tint="?attr/colorOnSurface"
                android:visibility="@{task.repeat ? View.VISIBLE : View.GONE}"
                app:layout_constraintTop_toTopOf="@+id/task_icon"
                app:layout_constraintEnd_toEndOf="@+id/task_icon"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/task_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="@{task.name}"
                android:textAppearance="?attr/textAppearanceHeadline6"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/task_icon"
                app:layout_constraintEnd_toStartOf="@+id/task_status_chip"
                app:layout_constraintBottom_toTopOf="@+id/plant_name"
                app:layout_constraintVertical_chainStyle="packed"
                app:layout_constraintVertical_bias="0"
                tools:text="Tưới nước buổi sáng" />

            <TextView
                android:id="@+id/plant_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                tools:text="Cho Cây sen đá, Xương rồng và 2 cây khác"
                android:layout_marginBottom="4dp"
                app:layout_constraintBottom_toTopOf="@+id/time_icon"
                app:layout_constraintStart_toStartOf="@+id/task_name"
                app:layout_constraintEnd_toEndOf="parent"/>

            <ImageView
                android:id="@+id/time_icon"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@android:drawable/ic_lock_idle_alarm"
                app:tint="?attr/colorOnSurface"
                android:layout_marginBottom="4dp"
                app:layout_constraintBottom_toTopOf="@id/expiration_icon"
                app:layout_constraintStart_toStartOf="@id/task_name" />

            <TextView
                android:id="@+id/task_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:maxLines="1"
                app:formattedDateTime="@{task.notifyTime}"
                tools:text="07:00 05/11/2025"
                app:layout_constraintStart_toEndOf="@id/time_icon"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/time_icon"
                app:layout_constraintTop_toTopOf="@id/time_icon" />

            <ImageView
                android:id="@+id/expiration_icon"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/hourglass_end"
                app:tint="@android:color/holo_red_dark"
                android:visibility="@{task.status == Status.READY ? View.VISIBLE : View.GONE}"
                tools:visibility="visible"
                android:layout_marginBottom="12dp"
                app:layout_constraintBottom_toTopOf="@id/complete_button"
                app:layout_constraintStart_toStartOf="@id/task_name"/>

            <TextView
                android:id="@+id/task_expiration"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:maxLines="1"
                android:textColor="@android:color/holo_red_dark"
                app:formattedDateTime="@{task.expiration}"
                android:visibility="@{task.status == Status.READY ? View.VISIBLE : View.GONE}"
                tools:visibility="visible"
                tools:text="08:00 05/11/2025"
                app:layout_constraintStart_toEndOf="@id/expiration_icon"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/expiration_icon"
                app:layout_constraintBottom_toBottomOf="@id/expiration_icon"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/task_status_chip"
                style="@style/Widget.MaterialComponents.Chip.Action"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{task.status.getDisplayName()}"
                app:chipMinHeight="26dp"
                android:textSize="12sp"
                app:chipStatusColor="@{task.status}"
                app:layout_constraintTop_toTopOf="@+id/task_menu"
                app:layout_constraintBottom_toBottomOf="@+id/task_menu"
                app:layout_constraintEnd_toStartOf="@+id/task_menu"
                android:layout_marginEnd="8dp"
                tools:text="Sẵn sàng" />

            <ImageButton
                android:id="@+id/task_menu"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/menu_dots_vertical"
                android:scaleType="centerInside"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/task_name"
                app:layout_constraintBottom_toBottomOf="@+id/task_name"
                app:tint="@android:color/black"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/complete_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hoàn thành"
                app:backgroundTint="@color/title_color"
                android:visibility="@{task.status == Status.READY ? View.VISIBLE : View.GONE}"
                tools:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>
</layout>
