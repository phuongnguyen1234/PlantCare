<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="history"
            type="com.example.plantcare.data.entity.History" />

        <import type="android.view.View" />
        <import type="com.example.plantcare.data.enums.Status" />
    </data>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="8dp">

        <LinearLayout
            android:id="@+id/itemLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:background="@color/white">

            <ImageView
                android:id="@+id/imgAction"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_gravity="center_vertical"
                app:taskTypeImage="@{history.taskType}"
                tools:src="@drawable/fertilizer" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtTaskType"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:text="@{history.taskName}"
                        android:textSize="21sp"
                        android:textStyle="bold"
                        android:maxLines="1"
                        android:ellipsize="end"
                        tools:text="Bón phân" />

                    <TextView
                        android:id="@+id/txtDoneStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/history_done_background_for_text_done_status"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="5dp"
                        android:text="Hoàn thành"
                        android:textColor="@android:color/white"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:visibility="@{history.status == Status.COMPLETED ? View.VISIBLE : View.GONE}"
                        tools:visibility="gone" />


                    <TextView
                        android:id="@+id/txtMissStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/history_miss_background_for_text_miss_status"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="5dp"
                        android:text="Bỏ lỡ"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:visibility="@{history.status == Status.MISSED ? View.VISIBLE : View.GONE}"
                        tools:visibility="visible"
                        android:textAlignment="viewEnd"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/txtTaskName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="28dp"
                    android:text="@{history.taskName}"
                    android:textColor="@{history.status == Status.COMPLETED ? @color/history_green: @color/history_orange}"
                    android:textSize="17sp"
                    android:textStyle="italic"
                    tools:text="Đã tưới 200ml nước." />

                <TextView
                    android:id="@+id/txtNotifyTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text='@{"Đã nhắc lúc: " + history.formattedNotifyTime}'
                    android:textColor="#666"
                    android:textSize="14sp"
                    tools:text="Đã nhắc lúc 10:00:00 28/11/2025" />

                <TextView
                    android:id="@+id/txtCompleteTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text='@{"Hoàn thành: " + history.formattedCompleteTime}'
                    android:textColor="#15803D"
                    android:textSize="14sp"
                    android:visibility="@{history.status == Status.COMPLETED ? View.VISIBLE : View.INVISIBLE}"
                    tools:text="Hoàn thành lúc 10:30:00 28/11/2025"
                    tools:visibility="gone" />
            </LinearLayout>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</layout>